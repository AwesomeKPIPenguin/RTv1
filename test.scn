
# Example of the scene file

scene {
	name: Test Scene;				# default: New Scene
#	world_color: 0x6090c5;			# default: 0x0 (black)
}

camera {
	origin: (-2000, 0, 0);			# default: (-1000, 0, 0)
	alpha: 0;						# default: 0 (in degrees)
									# 	angle of camera rotation (near OY)
	beta: 0;						# default: 0 (in degrees)
									# 	angle of camera rotation (near OX)
	gamma: 0;						# default: 0 (in degrees)
									# 	angle of camera rotation (near OZ)
	fov: 100;						# default: 100 (in degrees) (60 - 120)
									# 	Field Of View
}

light {
#	type: point;					# default: point
	bright: 50;					# default: 255.0 (0.0 - 255.0, excluding 0)
	origin: (-2000, 0, 0);			# default: (0, 3000, 0)
}

light {
#	type: point;					# default: point
	bright: 15;					# default: 255.0 (0.0 - 255.0, excluding 0)
	origin: (0, 1000, -500);			# default: (0, 3000, 0)
}

light {
#	type: point;					# default: point
	bright: 15;					# default: 255.0 (0.0 - 255.0, excluding 0)
	origin: (0, 1000, 500);			# default: (0, 3000, 0)
}

plane {
	origin: (0, -500, 0)			# default: (0, -1000, 0)
	norm: (0, 1, 0)					# default: (0, 1, 0)
									# 	normal vector of the plane
	color: 0x0000ff;				# default: 0xffff00 (yellow)
	spclr: 100;						# default: 0.0 (0.0 - 255.0)
									# 	specularity koef of the object
	trans: 0;						# default: 0.0 (0.0 - 255.0)
									# 	transparency koef of the object
}

sphere {
	origin: (0, 0, 0);				# default: (0, 0, 0)
	radius: 300;					# default: 100
	color: 0xff0000;				# default: 0xffff00 (yellow)
	spclr: 150;						# default: 25.0 (0.0 - 255.0)
									# 	specularity koef of the object
	trans: 0;						# default: 0.0 (0.0 - 255.0)
									# 	transparency koef of the object
}
